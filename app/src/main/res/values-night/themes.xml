<resources>
    <!-- Base application theme -->
    <style name="Theme.BudgetTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item> <!-- White text on primary surfaces -->

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item> <!-- White text on secondary surfaces -->

        <!-- Backgrounds and surface colors -->
        <item name="colorBackground">@color/background</item> <!-- Dark background -->
        <item name="colorSurface">@color/surface</item> <!-- Card or elevated surfaces -->
        <item name="colorOnBackground">@color/text_primary</item> <!-- White text on dark backgrounds -->
        <item name="colorOnSurface">@color/text_secondary</item> <!-- White text on elevated surfaces -->

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
